// Function: verify a LOCK_TICKETS
label(name: func_send_lock_tickets)

// here we compute the correct owner, but below we give the ownership to
// the new computer3 (the real cluckd) so that way we get feedback (the
// UNLOCKING message after the timeout)
compare(expression: "${lock_owner}" <=> "rc2")
if(not_equal: func_send_lock_tickets_same_owner)
set_variable(name: lock_owner, value: "rc1") // assign leader0 instead
label(name: func_send_lock_tickets_same_owner)

// the "${lock_timeout}" is set to the obtention_timeout, so here we compute
// the lock timeout itself and pass that as the date
set_variable(name: lock_timeout_date, value: ${lock_timeout} - 57)

send_message(
	command: LOCK_TICKETS,
	sent_server: ${hostname},
	sent_service: cluckd,
	server: ${hostname},
	service: cluckd,
	parameters: {
