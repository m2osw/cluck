			+ "|get_max_ticket=true"
			+ "|lock_duration=13"
			+ "|lock_failed=none"
			+ "|lock_timeout_date=${lock_timeout_date}"
			+ "|locked=true"
			+ "|object_name=lock2"
			+ "|obtention_timeout=${lock_timeout}"
			+ "|our_ticket=1"
			//+ "|owner=${lock_owner}"
			+ "|owner=${hostname}" // change ownership to get the LOCK_UNLOCKING message and verify that the timeout can happen after such a message
			+ "|serial=10001"
			+ "|server_name=${hostname}" // name of the server the LOCK command originated from
			+ "|service_name=website"
			+ "|tag=1505"
			+ "|ticket_key=00000001/${hostname}/1123"
			+ "|ticket_ready=true"
			+ "|unlock_duration=13\n"
	})
